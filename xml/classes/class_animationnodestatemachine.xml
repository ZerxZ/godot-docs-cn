            <paragraph classes="classref-property" ids="class-animationnodestatemachine-property-reset-ends" names="class_animationnodestatemachine_property_reset_ends"><reference internal="True" refuri="class_bool#class-bool"><inline classes="std std-ref">bool</inline></reference> <strong>reset_ends</strong> = <literal>false</literal></paragraph>
            <bullet_list bullet="-" classes="classref-property-setget">
