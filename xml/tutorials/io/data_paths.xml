                    <list_item>
                        <paragraph><reference internal="True" refuri="../../classes/class_string#class-string-method-get-basename"><inline classes="std std-ref">String.get_basename()</inline></reference></paragraph>
                    </list_item>
                    <list_item>
                        <paragraph><reference internal="True" refuri="../../classes/class_string#class-string-method-get-extension"><inline classes="std std-ref">String.get_extension()</inline></reference></paragraph>
